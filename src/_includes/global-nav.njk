{%- set isHomepage = page.url == "/" -%}

<header class="mx-[2vw] 3xl:mx-auto max-w-[2000px] px-[2vw]">
  <nav class="global-nav py-4">  
    <ul role="list" class="list-none flex items-center flex-row text-lg font-medium">
      <li class="m-i-st-0 me-auto" data-home {{ 'aria-current=page' if isHomepage }}>
        {%- if not isHomepage %}
        <a href="/">
        {%- endif %}
          {% include "partials/jdw-logo.svg" %}
        {%- if not isHomepage %}
        </a>
        {%- endif %}
      </li>
      {% for item in site.navigation %}
        <li class="px-6" {{ helpers.getLinkActiveState(item.url, page.url) | safe }}>
          {%- if item.url != page.url %}
            <a href="{{ item.url }}">
          {%- endif %}
          {{ item.label }}
          {%- if item.url != page.url %}
            </a>
          {%- endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>
</header>